/* pages/input/input.wxss */
.log{
  position: relative;
  overflow: hidden;
  padding-bottom: 10px;
  border-bottom: 1px solid #ddd;
  
}
.log image{ 
  display: block;
  height: 30px;
  width: 30px;
  
}
.log text{
  display: block;
  
  position: absolute;
  left: 40px;
  top: 6px;
  font-size: 14px;
}
.log input{
  position: absolute;
  top: 5px;
  right: 5px;
  background: #ddd;
  border-radius: 5px;
  padding-left: 31px;
}
.log .addressImge{
   position: absolute;
   top: 9px;
   height: 15px;
   width: 15px;
   left: 111px;
   z-index: 20;
   
}
.log-b::after{
 
  position: absolute;
  content: "";
  height: 15rpx;
  width: 15rpx;
  border: 2rpx solid #333;
  border-width: 0 0 2rpx 2rpx;
  top: 17rpx;
   transform: rotate(-45deg);
   left: 53px;
}
.log-adress image{
  height: 16px;
  width: 16px;
}
.log-adress {
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}