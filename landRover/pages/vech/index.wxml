<!--pages/vech/index.wxml-->
<view class="section">
    <view class="cover">
    <image src="{{entity.image}}" mode="aspectFill" />
    <view class="content">
      <view class="header">
        {{entity.header}}
        <view class="sub-header">{{entity.sub_header}}</view>
      </view>
    </view>
    <view class="meta">{{entity.meta.price}}</view>
  </view>

   <view class='spec'>
      <view class='item'>
         <view class='header'>二氧化氮</view>
         <view class='value'>
            <text>{{entity.meta.carbon_dioxide}}克/公里</text>
         </view>
      </view>
       <view class='item'>
         <view class='header'>综合燃油</view>
         <view class='value'>
            <text>{{entity.meta.fuel}}</text>
         </view>
      </view>
   </view>
   <view class='action'>
     <view class='description'>{{entity.description}}</view>
     <button class='button primary' bindtap='handleTest'>预约驾驶</button>
   </view>
</view>
